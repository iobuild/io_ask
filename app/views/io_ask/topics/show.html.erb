        <div class="container">


            <div class="col-md-8">

                <%= render 'io_ask/topics/breadcrumb', :category => nil, :topic => @topic %>
                

                <div class="content">
                    <div class="panel panel-default">

                        <div class="panel-body">

                            <dl class="topics">
                            
                                
                                <dd>
                                  <a href="/users/<%= @topic.user.ioask_name %>" class="pull-left mr-10 thumb-size">
                                    <%= ioask_avatar(@topic.user, :size => 48) %>
                                  </a>
                                    
                                    
                                    <a href="/ask/<%= @topic.id %>" class="title" title="<%= @topic.title %>"><%= @topic.title %></a>
                                    <div class="space"></div>
                                    <div class="info">

                                        <% if @topic.user == current_user %>
                                        <span class="label label-default pull-right"><a href="/ask/<%= @topic.id %>/edit" title="编辑"><i class="fa fa-edit"></i></a> </span>
                                        <% end %>

                                        <%= render 'io_ask/topics/tipbar', :topic => @topic %>
                                    </div>
                                    <div class="clear"></div>
                                </dd>
                                
                            
                            </dl>
                            

                            <p>
                              <%= raw @topic.content %>
                            </p>


                        </div>
                    </div>


                    <div class="panel panel-default">

                        <div class="panel-heading"><strong>评论列表 (<%= @topic.comment_count %> 回复)</strong></div>

                        <div class="panel-body content">

                            
                            <dl class="replies">
        
                                <%
                                  @comments.each do |c|
                                %>
                                <dd id="comment-<%= c.id %>">
                                    <a href="/users/<%= c.user.ioask_name %>" class="pull-left mr-10 thumb-size"><img class="img-rounded" src="<%= c.user.avatar.url(:thumb) %>" alt="<%= c.user.ioask_name %>"></a>
                                    <div class="info">
                                        <% if c.user == current_user %>
                                        <span class="label label-default pull-right"><a href="/comments/<%= c.id %>/edit" title="编辑"><i class="fa fa-edit"></i></a> </span>
                                        <% end %>
                                      
                                        <a href="/users/<%= c.user.ioask_name %>"><strong><%= c.user.ioask_name %></strong></a> •
                                        <%= time_ago_in_words(c.created_at) %>前
                                    </div>
                                    <div class="space"></div>
                                    <div class="reply-content"><p><%= raw c.content %></p></div>
                                    <div class="clear"></div>
                                </dd>
                                <% end %>


                            </dl>

                            <div class="pull-right"><%= paginate @comments %></div>

                        </div>
                    </div>


                    <div class="panel panel-default">
                    
                        <div class="panel-body">


                            
                            <%= simple_form_for @topic.comments.build, :url => "/ask/#{@topic.id}/comments" do |f| %>

                                <div class="form-group">
                                    <%= f.input :content, :required => true, as: :text, :label => false %>
                                </div>
                
                                
                                <div class="form-group">

                                  <% if user_signed_in? %>
                                    <%= f.submit "回复", :class => "btn btn-primary" %>
                                  <% else %>
                                     <p class="">如要发表评论，请先 
                                      <a href="/users/sign_in", class = "btn btn-primary">登录</a> 
                                      如果还没有账号，请先 <a href="/users/sign_up", class = "btn btn-primary">注册</a> 一个账号
                                    </p>
                                  <% end %>

                                </div>
                                
                            <% end %>

                                       

                        </div>

                    </div>




                </div>
 


            </div>


            <%= render "io_ask/topics/sidebar" %>

        </div>
        <!-- /.row -->