<div class="row">

  <div class="col-md-8">

      <%= render 'io_ask/topics/breadcrumb', :category => @category, :topic => nil %>

      <div class="panel panel-default">


          <div class="panel-body">

                <% if @category.nil? %>
                <ul class="nav nav-tabs" role="tablist">
                    <li <% if params[:latest] == 'topic' || params[:latest].nil? %>class="active"<% end %>>
                      <a href="/ask?lastest=topic">最新话题</a>
                    </li>
                    <li <% if params[:latest] == 'comment' %>class="active"<% end %>>
                    <a href="/ask?latest=comment">最新回复</a>
                    </li>
                </ul>
                <% else %>
                <p>
                  <a href="/ask">返回所有列表</a> / 
                  <strong><%= @category.name %></strong> 当前共有 <%= @topics.count %> 主题
                </p>

                <ul class="nav nav-tabs" role="tablist">
                    <li <% if params[:latest] == 'topic' || params[:latest].nil? %>class="active"<% end %>>
                      <a href="/ask?cid=<%= @category.id %>&lastest=topic">最新主题</a>
                    </li>
                    <li <% if params[:latest] == 'comment' %>class="active"<% end %>>
                    <a href="/ask?cid=<%= @category.id %>&latest=comment">最新回复</a>
                    </li>
                </ul>
                <% end %>



                <dl class="topics">
                
                    
                    <% @topics.each do |topic| %>
                    <dd>
                      <a href="/users/<%= topic.user.username %>" class="pull-left mr-10 thumb-size">
                        <img class="img-rounded" src="<%= topic.user.avatar.url(:thumb) %>" alt="<%= topic.user.username %>">
                      </a>
                        
                            <a class="badge pull-right" href=""><%= topic.comment_count %></a>
                        
                        <a href="/ask/<%= topic.id %>" class="title" title="<%= topic.title %>"><%= topic.title %></a>
                        <div class="space"></div>
                        <div class="info">
                            <%= render 'ask/tipbar', :topic => topic %>
                        </div>
                        <div class="clear"></div>
                    </dd>
                    <% end %>



                
                </dl>



                <div class="pull-right"><%= paginate @topics %></div>


          </div>



      </div>

        

  </div>


  <%= render "io_ask/topics/sidebar" %>



</div>
<!-- /.row -->

  